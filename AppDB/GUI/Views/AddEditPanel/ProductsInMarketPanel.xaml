<UserControl x:Class="GUI.Views.AddEditPanel.ProductsInMarketPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Views.AddEditPanel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Width="100" Height="50" Margin="5" Command="{Binding AddNew}">
            <TextBlock TextWrapping="Wrap">Add new product</TextBlock>
        </Button>
        <Button Width="100" Height="50" Margin="5" Command="{Binding AddProm}"
                Grid.Column="1">
            <TextBlock TextWrapping="Wrap">Add promotional product</TextBlock>
        </Button>
        <Button Width="100" Height="50" Margin="5" Command="{Binding Edit}"
                Grid.Column="2">Edit</Button>
        <Button Width="100" Height="50" Margin="5" Command="{Binding Back}"
                Grid.Column="3">Back</Button>
    </Grid>
</UserControl>
