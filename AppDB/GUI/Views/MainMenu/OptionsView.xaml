<UserControl x:Class="GUI.Views.MainMenu.OptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Views.MainMenu"
             mc:Ignorable="d" 
             >
    <Grid>
        <ListView SelectedValue="{Binding SelectedOption}" FontFamily="Montserrat">
            <TextBlock Name="Workers">Workers</TextBlock>
            <TextBlock Name="Products">Products</TextBlock>
            <TextBlock Name="Products_market">Products in the Market</TextBlock>
            <TextBlock Name="Categories">Categories</TextBlock>
            <TextBlock Name="Checks">Checks</TextBlock>
            <TextBlock Name="Clients_cards">Client Cards</TextBlock>
            <TextBlock Name="Other">Other</TextBlock>
        </ListView>
    </Grid>
</UserControl>
