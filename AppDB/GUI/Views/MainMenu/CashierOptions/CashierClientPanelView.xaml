<UserControl x:Class="GUI.Views.MainMenu.CashierOptions.CashierClientPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Views.MainMenu.CashierOptions"
             xmlns:tabs ="clr-namespace:GUI.Views.MainMenu.Options"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl>
            <TabItem>
                <TabItem.Header>Find by Discount Percents</TabItem.Header>
                <TabItem.Content>
                    <tabs:ClientCardsView></tabs:ClientCardsView>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>Find by Surname</TabItem.Header>
                <TabItem.Content>
                    <local:ClientByName></local:ClientByName>
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
